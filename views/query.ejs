<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/main.css">
  <title>Query</title>
</head>
<body>
  <h1>Query</h1>

  <form method="post" action="/query">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title">
    <label for="album">Album:</label>
    <input type="text" id="album" name="album">
    <label for="artist">Artist:</label>
    <input type="text" id="artist" name="artist">
    <label for="year">year:</label>
    <input type="text" id="year" name="year">
    <button type="submit">Search</button>
  </form>

  <table>
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Artist</th>
        <th scope="col">Year</th>
        <th scope="col">Album</th>
        <th scope="col">Image</th>
        <th scope="col">Subscribe</th>
      </tr>
    </thead>
    <tbody>
      <% for ( const musicItem of music ) { %>
        <tr>
          <th scope="row"><%= musicItem.title %> </th>
          <th scope="row"><%= musicItem.artist %> </th>
          <th scope="row"><%= musicItem.year %> </th>
          <th scope="row"><%= musicItem.album %> </th>
          <th scope="row"><img src="<%= musicItem.image %>" alt=""></th>
          <th scope="row"><a href="/sub?title_album=<%= musicItem.title %>_<%= musicItem.album %>">Subscribe</a></th>
        </tr>
      <% } %>
    </tbody>
  </table>
  <% if (formError) { %>
    <p><%= formError %> </p>
  <% } %>

</body>
</html>
